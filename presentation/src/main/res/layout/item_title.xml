<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="title"
            type="com.titou.blaum.entities.Title"/>
    </data>


<com.google.android.material.card.MaterialCardView
    android:id="@+id/card"
    app:cardBackgroundColor="@color/secondaryLightColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_large"
    android:layout_marginVertical="@dimen/spacing_large"
    app:cardElevation="@dimen/card_elevation"
    app:cardCornerRadius="@dimen/card_radius"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail_imageview"
            android:contentDescription="@string/title_thumbnail_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="@dimen/icon_large"
            android:layout_height="@dimen/icon_large"
            />

        <TextView
            android:id="@+id/title_textview"
            android:text="@{title.title}"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_default"
            android:layout_marginTop="4dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/p2"
            android:textStyle="bold"
            android:maxLines="3"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@id/thumbnail_imageview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/thumbnail_imageview"
            tools:text="mollitia soluta ut rerum eos aliquam consequatur perspiciatis maiores" />

        <TextView
            android:id="@+id/album_textview"
            android:text="@{`Album ` + String.valueOf(title.albumId)}"
            tools:text="Album 1"
            android:textColor="@color/secondaryTextColor"
            android:layout_marginTop="@dimen/spacing_default"
            android:layout_marginHorizontal="@dimen/spacing_default"
            app:layout_constraintLeft_toRightOf="@id/thumbnail_imageview"
            app:layout_constraintTop_toBottomOf="@id/title_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>


</layout>